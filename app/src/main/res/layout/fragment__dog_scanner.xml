<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragments.Fragment_Dashboard">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/dogScan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/emotionScan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/vector_dog_scan" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="Dog Breed Scanner"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/dogScan"
        app:layout_constraintStart_toStartOf="@+id/dogScan"
        app:layout_constraintTop_toBottomOf="@+id/dogScan" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/emotionScan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/bcs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dogScan"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/vector_dog_emotion" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="Dog Emotion Scanner"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="@+id/emotionScan"
        app:layout_constraintStart_toStartOf="@+id/emotionScan"
        app:layout_constraintTop_toBottomOf="@+id/emotionScan" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bcs"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emotionScan"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/vector_bcs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/product_sans_bold"
        android:text="Check your Dog's BCS"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="@+id/bcs"
        app:layout_constraintStart_toStartOf="@+id/bcs"
        app:layout_constraintTop_toBottomOf="@+id/bcs" />

</androidx.constraintlayout.widget.ConstraintLayout>
